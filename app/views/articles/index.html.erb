<p><%= notice %></p>

<div class="container m-auto p-4">
  <h1 class="text-2xl text-center font-bold">Articles</h1>
<button class="bg-blue-400 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
 <%= link_to 'New Article', new_article_path %>
</button>

</div>

<table class="table-auto">
 <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody class="table-auto">
      <% @articles.each do |article| %>
        <%= render partial: "article", locals: { article: article } %>
      <% end %>
    </tbody>
</table>