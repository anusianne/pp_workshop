<div class="container grid place-items-center min-h-screen">
  <h3 class="text-4xl font-bold text-sky-400 text-center mt-12 mb-8">Articles</h3>
  <button class="bg-blue-400 hover:bg-blue-700 text-white font-bold py-2 px-24 rounded-full mb-4">
    <%= link_to 'New Article', new_article_path %>
  </button>
  <div class="w-full">
    <% @articles.each do |article| %>
      <%= render partial: "article", locals: { article: article } %>
    <% end %>
  </div>
</div>
