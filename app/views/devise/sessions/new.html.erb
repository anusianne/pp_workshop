<div class="container lg flex mx-auto	justify-center">
  <div class="flex-col min-h-screen space-y-4">
    <h2 class="text-4xl font-bold italic text-sky-400 text-left mt-12 mb-8 py-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"font-bold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"font-bold" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>